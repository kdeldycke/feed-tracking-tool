<h2>User Preferences</h2>

<%= error_messages_for 'profile' %>

<% form_for :profile do |f| %>
<p>Display name:
   <%= f.text_field :display_name %>
</p>
<p>email:
   <%= f.text_field :email %>
</p>
<p>Suspend mail sending:
  <%= f.check_box :suspend_email %>
</p>
<p>
  <%= submit_tag 'Update'%>
</p>
<% end %>
