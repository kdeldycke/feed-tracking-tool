<%= start_form_tag :action => 'authenticate' %>

<fieldset>
  <div class="form-element">
    <label for="name">Login </label>
    <%= text_field 'login', 'name', {:class=>"text-input"} %>
  </div>
  <div class="form-element">
    <label for="password">Password </label>
    <%= password_field 'login', 'password' , {:class=>"text-input"} %>
  </div>
  <div class="form-element">
    <%= submit_tag 'login' %>
  </div>
</fieldset>