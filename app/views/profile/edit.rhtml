<h2>My preferences</h2>

<% form_for :profile do |f| %>
  <%= error_messages_for 'profile' %>
  <p>Display name: <%= f.text_field :display_name %></p>
  <p>email: <%= f.text_field :email %></p>
  <p>Suspend mail sending: <%= f.check_box :suspend_email %></p>
  <p><%= submit_tag 'Update my preferences'%></p>
<% end %>